<h1>New Place</h1>

<%= form_with :model => @place do |form| %>
  <p>
    <%= form.label "place" %>
    <%= form.text_field "place" %>
  </p>

  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <!-- So we can transfer state from the previous action to the next -->
  <%= form.hidden_field "place_id" %>
  <p><%= form.submit %></p>
<% end %>