<h1><%= @place["place"] %></h1>

<h2><%= @place["description"] %></h2>

<h3>Notes</h3>

<ul>
  <% for post in @posts %>
    <li><%= post["title"] %>, <%= post["posted_on"] %></li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

